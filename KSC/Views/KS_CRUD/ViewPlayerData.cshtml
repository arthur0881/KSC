

@model IEnumerable<KSC.Models.PlayerDataViewModel>

@{
    ViewBag.Title = "ViewPlayerData";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <font color="#FFF2F2" size="5"><strong>玩家個人數據</strong></font>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
